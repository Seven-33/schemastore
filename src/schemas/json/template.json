{
  "title": "JSON schema .NET template files",
  "$schema": "http://json-schema.org/draft-04/schema#",

  "type": "object",
  "required": [ "author", "name", "classifications", "shortName", "identity" ],

  "definitions": {
    "ice": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "string",
            "uniqueItems": true
          }
        },
        {
          "type": "string"
        }
      ]
    },
    "modifier": {
      "type": "object",
      "properties": {
        "modifiers": {
          "$ref": "#/definitions/source/properties/modifiers"
        },
        "condition": {
          "type": "string"
        },
        "exclude": {
          "$ref": "#/definitions/ice"
        },
        "include": {
          "$ref": "#/definitions/ice"
        },
        "copyOnly": {
          "$ref": "#/definitions/ice"
        },
        "rename": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      }
    },
    "source": {
      "type": "object",
      "allOf": [ { "$ref": "#/definitions/modifier" } ],
      "properties": {
        "modifiers": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/modifier"
          }
        },
        "source": {
          "type": "string"
        },
        "target": {
          "type": "string"
        }
      }
    }
  },

  "properties": {
    "author": {
      "type": "string"
    },
    "classifications": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "defaultName": {
      "type": "string",
      "minLength": 1
    },
    "generatorVersions": {
      "type": "string"
    },
    "groupIdentity": {
      "type": "string",
      "minLength": 1
    },
    "guids": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[{(]?[0-9A-Fa-f]{8}[-]?([0-9A-Fa-f]{4}[-]?){3}[0-9A-Fa-f]{12}[)}]?$"
      }
    },
    "identity": {
      "type": "string",
      "minLength": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "placeholderFilename": {
      "type": "string"
    },
    "postActions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [ "actionId" ],
        "properties": {
          "condition": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "continueOnError": {
            "type": "boolean",
            "default": false
          },
          "args": {
            "type": "object",
            "additionalProperties": {
              "type": "string"
            }
          },
          "configFile": {
            "type": "string"
          },
          "actionId": {
            "type": "string",
            "pattern": "^[{(]?[0-9A-Fa-f]{8}[-]?([0-9A-Fa-f]{4}[-]?){3}[0-9A-Fa-f]{12}[)}]?$"
          },
          "manualInstructions": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [ "text" ],
              "properties": {
                "text": {
                  "type": "string"
                },
                "condition": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "precedence": {
      "type": "integer"
    },
    "preferNameDirectory": {
      "enum": [ "true", "false" ]
    },
    "primaryOutputs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string"
          },
          "condition": {
            "type": "string"
          }
        }
      }
    },
    "shortName": {
      "type": "string",
      "minLength": 1
    },
    "sourceName": {
      "type": "string"
    },
    "sources": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/source"
      }
    },
    "symbols": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": [ "type" ],
        "oneOf": [
          {
            "properties": {
              "type": {
                "enum": [ "bind", "generated" ]
              },
              "generator": {
                "anyOf": [
                  {
                    "enum": [ "regex", "switch", "coalesce", "guid", "constant", "random", "now", "evaluate", "casing", "port" ]
                  },
                  {
                    "type": "string"
                  }
                ]
              }
            }
          },
          {
            "properties": {
              "type": {
                "enum": [ "parameter" ]
              },
              "datatype": {
                "enum": [ "choice", "bool", "float", "int", "hex", "text" ]
              },
              "choices": {
                "type": "array",
                "items": {
                  "required": [ "choice" ],
                  "properties": {
                    "choice": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    }
                  }
                }
              },
              "replaces": {
                "type": "string"
              },
              "defaultValue": {
              }
            }
          },
          {
            "properties": {
              "type": {
                "enum": [ "computed" ]
              },
              "value": {
                "type": "string"
              }
            }
          }
        ]
      }
    },
    "tags": {
      "type": "object",
      "properties": {
        "language": {
          "type": "string"
        },
        "type": {
          "anyOf": [
            { "enum": [ "project", "item" ] },
            { "type": "string" }
          ]
        }
      }
    },
    "thirdPartyNotices": {
      "type": "string"
    }
  }
}
