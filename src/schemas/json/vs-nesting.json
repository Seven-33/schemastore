{
  "title": "JSON schema for Visual Studio's file nesting feature",
  "$schema": "http://json-schema.org/draft-04/schema#",

  "type": "object",

  "definitions": {
    "fileExtension": {
      "pattern": "^\\.[^/\\\\]+$"
    },
    "fileName": {
      "pattern": "^[^/\\\\|:><\"?\\*]+$"
    },

    "ext-ext": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^(\\.[^/\\\\]+|\\*)$": {
          "type": "array",
          "items": { "$ref": "#/definitions/fileExtension" }
        }
      }
    },

    "file-file": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^[^/\\\\|:><\"?\\*]+$": {
          "description": "The file name to nest.",
          "type": "array",
          "items": { "$ref": "#/definitions/fileName" }
        }
      }
    },

    "file-ext": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^[^/\\\\|:><\"?\\*]+$": {
          "description": "",
          "type": "array",
          "items": { "$ref": "#/definitions/fileExtension" }
        }
      }
    }
  },

  "properties": {
    "dependentFileProviders": {
      "description": "",
      "type": "object",

      "properties": {
        "addedExtension": {
          "description": "",
          "allOf": [ { "$ref": "#/definitions/ext-ext" } ]
        },

        "pathSegment": {
          "description": "",
          "allOf": [ { "$ref": "#/definitions/ext-ext" } ]
        },

        "extensionToExtension": {
          "description": "",
          "allOf": [ { "$ref": "#/definitions/ext-ext" } ]
        },

        "fileToFile": {
          "description": "Nest specific file names under other specific file names",
          "allOf": [ { "$ref": "#/definitions/file-file" } ]
        },

        "filePartToExtension": {
          "description": "",
          "allOf": [ { "$ref": "#/definitions/file-ext" } ]
        },

        "allExtensions": {
          "description": "",
          "allOf": [ { "$ref": "#/definitions/ext-ext" } ]
        }
      }
    }
  }
}
