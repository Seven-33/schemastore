<?xml version="1.0" encoding="utf-8"?>
<CssModule name="Syntax" url="http://www.w3.org/TR/css3-syntax/" status="WD" pub-date="2003-08-13">

  <CssAtDirective name="charset" browsers="all" restriction="string" example="@charset 'utf-8';" description="Defines character set of the document." url="http://www.w3.org/TR/css3-syntax/#charset" />

  <CssAtDirective name="import" browsers="all" example="@import url('file.css') tv, print;" description="Includes content of another file." url="http://www.w3.org/TR/css3-syntax/#at-import" />

  <CssAtDirective name="media" browsers="all" description="Defines a stylesheet for a particular media type." example="@media print { ... }" url="http://www.w3.org/TR/css3-mediaqueries" />

  <CssAtDirective name="host" browsers="C" description="Applies to elements specified in shadow trees." example="@host { :scope { color: red; } }" url="http://www.w3.org/TR/shadow-dom/#host-at-rule" />

  <CssAtDirective name="supports" browsers="C,FF,O" description="A conditional group rule whose condition tests whether the user agent supports CSS property:value pairs." example="@supports (display: flexbox) { div { display: flexbox; } }" url="http://www.w3.org/TR/css3-conditional/#at-supports" />

  <CssPropertyValue type="media">
    <entry value="all" />
    <entry value="braille" />
    <entry value="embossed" />
    <entry value="handheld" />
    <entry value="print" />
    <entry value="projection" />
    <entry value="screen" />
    <entry value="speech" />
    <entry value="tty" />
    <entry value="tv" />
  </CssPropertyValue>
</CssModule>