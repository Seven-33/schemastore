<CssModule
	name="SVG Gradients and Patterns"
	standard-reference="http://www.w3.org/TR/SVG11/pservers.html"
	status="REC"
	pub-date="2011-08-16">
	<CssProperty
		name="stop-color"
		version="3.0"
		restriction="color"
		type="color"
		description="The 'stop-color' property indicates what color to use at that gradient stop."
		standard-reference="http://www.w3.org/TR/SVG11/pservers.html#StopColorProperty" />
	<CssProperty
		name="stop-opacity"
		version="3.0"
		restriction="number(0-1)"
		description="The 'stop-opacity' property defines the opacity of a given gradient stop."
		standard-reference="http://www.w3.org/TR/SVG11/pservers.html#StopOpacityProperty" />
</CssModule>